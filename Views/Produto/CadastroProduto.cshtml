@model AulaDeASPNet.Models.Produto

@{
    ViewData["Title"] = "Cadastro Produto";
}
@* Formulário Cadastro Produto *@
<div class="container">
    @* LINHA TITULO *@
    <div class="row">
        <div class="col text-center">
            <h1> 🥀 Cadastro Produto  🥀</h1>
        </div>
    </div>
    @* LINHA FORMULÁRIO *@
    <form method="post">
        <div class="row">
            <div class="col">
                <label asp-for="Nome" class="form-label fw-bolder"></label>
                <input asp-for="Nome" type="text" class="form-control" id="Nome" />
            </div>
            <div class="col-lg-3">
                <label asp-for="Marca" class="form-label fw-bolder"></label>
                <input asp-for="Marca" type="text" class="form-control" id="Marca" />
            </div>
            <div class="col-lg-3">
                <label class="form-label fw-bolder">Quantidade:</label>
                <input asp-for="Qtde" type="text" class="form-control" id="Qtde" />
            </div>
            <div class="col-lg-2">
                <label for="" class="form-label fw-bolder text-nowrap">Valor Unitário:</label>
                <input asp-for="ValorUnit" type="text" class="form-control" id="ValorUnit" />
            </div>
        </div>
        <div class="row mt-3 justify-content-md-end">
            <div class="col-3 d-flex justify-content-end">
                <input type="submit" class="btn btn-outline-dark btn-lg" name="name" value="Cadastrar" />
            </div>
        </div>
    </form>
</div>